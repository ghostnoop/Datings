<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
    </style>


    <style name="propably" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#171020</item>
        <item name="colorPrimaryDark">#00C514</item>
        <item name="colorAccent">#C82121</item>

    </style>

    <style name="text_tv" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="text_et" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@drawable/edit_text_bg</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

<!--                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"            android:layout_width="match_parent"
-->
    <style name="ovverider" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="theme">@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu</item>
    </style>


    <style name="HiddenTitleTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="pg_bar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>